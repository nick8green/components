{
  "name": "@nick8green/components",
  "version": "2.2.0",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "style": "dist/index.css",
  "files": [
    "dist/**",
    "!dist/**/*.test.*",
    "!dist/**/*.stories.*"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.prod.json && vite build",
    "build:storybook": "storybook build --output-dir storybook",
    "clean": "rm -rf dist",
    "format": "prettier --write --parser typescript '**/*.{js,ts,tsx}'",
    "lint": "eslint .",
    "lint:fix": "yarn lint --fix",
    "prebuild": "yarn clean",
    "prepare": "husky && yarn run build",
    "storybook": "storybook dev -p 6006",
    "test": "vitest run --coverage",
    "test:coverage": "vitest run --coverage && open coverage/index.html",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "components",
    "react",
    "storybook"
  ],
  "author": "Nick Green <nick-green@live.co.uk> (https://www.nick8green.co.uk/)",
  "license": "MIT",
  "description": "Library of reusable React components.",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "7.0.1",
    "@fortawesome/free-brands-svg-icons": "7.0.1",
    "@fortawesome/free-solid-svg-icons": "7.0.1",
    "@fortawesome/react-fontawesome": "3.0.2",
    "moment": "^2.30.1",
    "qrcode.react": "4.2.0",
    "react-chrono": "^2.9.1",
    "react-markdown": "10.1.0",
    "rehype-react": "8.0.0",
    "remark-gfm": "4.0.1"
  },
  "devDependencies": {
    "@eslint/compat": "1.3.2",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "11.0.6",
    "@storybook/addon-docs": "9.1.7",
    "@storybook/addon-essentials": "9.0.0-alpha.12",
    "@storybook/addon-interactions": "9.0.0-alpha.10",
    "@storybook/addon-links": "9.1.7",
    "@storybook/addon-onboarding": "9.1.7",
    "@storybook/client-api": "7.6.20",
    "@storybook/react-vite": "9.1.7",
    "@storybook/test": "9.0.0-alpha.2",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@types/node": "24.5.2",
    "@types/react": "19.1.13",
    "@typescript-eslint/eslint-plugin": "8.44.0",
    "@typescript-eslint/parser": "8.44.0",
    "@vitejs/plugin-react": "5.0.3",
    "@vitest/coverage-v8": "3.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.36.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-storybook": "9.1.7",
    "husky": "9.1.7",
    "jsdom": "27.0.0",
    "lint-staged": "16.2.0",
    "next": "15.5.3",
    "prettier": "3.6.2",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "storybook": "9.1.7",
    "semantic-release": "24.2.9",
    "typescript": "5.9.2",
    "vite": "7.1.7",
    "vite-plugin-dts": "4.5.4",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "next": "15.5.3",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run format",
      "npm run lint",
      "npm run test"
    ]
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "homepage": "http://nick8green.github.io/components",
  "repository": {
    "directory": "packages/components",
    "type": "git",
    "url": "git+https://github.com/nick8green/components.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "sideEffects": [
    "*.css"
  ],
  "packageManager": "yarn@1.22.22",
  "resolutions": {
    "tmp": "^0.2.4"
  }
}
